PORT=5000
NODE_ENV=development
# When using docker-compose, Mongo runs in the "mongo" service with auth.
# Local dev (no Docker): mongodb://localhost:27017/new-com
# Docker dev: mongodb://root:supersecret@mongo:27017/new-com?authSource=admin
MONGODB_URI=mongodb://root:supersecret@mongo:27018/new-com?authSource=admin
JWT_SECRET=your-super-secret-jwt-key-change-in-production
FRONTEND_URL=http://localhost:3000
# Optional custom frontend domain (used for CORS)
DOMAIN=https://yourdomain.com

# Redis (optional but recommended for caching)
# Either set REDIS_URL or REDIS_HOST/REDIS_PORT
# Local dev (no Docker): redis://localhost:6379
# Docker dev (with password): redis://:redissecret@redis:6379
REDIS_URL=redis://:redissecret@redis:6379
# REDIS_HOST=redis
# REDIS_PORT=6379

# Seed Admin (optional - defaults shown)
SEED_ADMIN_NAME=Admin
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_PASSWORD=admin123

# Cron (optional - protect abandoned cart recovery endpoint)
# CRON_SECRET=your-cron-secret-token
